                                    </HyperlinkButton>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" x:Name="crearSubasta">
                                    <StackPanel.Background>
                                        <SolidColorBrush Color="{StaticResource FondoPanelDespliege}" />
                                    </StackPanel.Background>
                                    <Image Source="imagenes/profile.png" Width="30" />
                                    <HyperlinkButton>
                                        Subastar Auto
                                        <HyperlinkButton.NavigateUri>
                                            /subastar
                                        </HyperlinkButton.NavigateUri>
                                    </HyperlinkButton>
                                </StackPanel>
                            </StackPanel>
