                                    <HyperlinkButton.NavigateUri>
                                        /modificarPerfil
                                    </HyperlinkButton.NavigateUri>
                                </HyperlinkButton>
                            </StackPanel>
                        </viblendNavigationPanes:NavigationPaneItem>
                        <viblendNavigationPanes:NavigationPaneItem IsExpanded="True" x:Name="expandibleHistorial">
